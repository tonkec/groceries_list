<% provide(:title, "Log in") %>

<div class="row sessions-row">
  <div class="col s12 l6">
    <h1 class="login-heading animated pulse">Log in</h1>
    <%= form_for(:session, url: login_path, :html => {:class => 'col s12'}) do |f| %>
    <div class="input-field col s12">
     <%= f.label :email %><br>
     <%= f.text_field :email, class: "materialize-textarea" %>
   </div><!--inputf-->
   <div class="input-field col s12">
     <%= f.label :password %><br>
     <%= f.password_field :password, class: "materialize-textarea" %>
   </div><!--inputf-->
   <div class="input-field col s12 remember-input-f">
    <%= f.check_box :remember_me %>
    <span class="rememberme-span">Remember me on this computer</span>
    
  </div><!--inputf-->
 
    <%= f.submit 'Log in', :class => 'btn waves-effect waves-light btn-blue btn-login' %>
    <% end %>
 

<div class="row">
  <div class="col s12 l6">
      <span class="login-paragraph">New user? <%= link_to "Sign up", root_path , class: "login-span" %></span>
  </div>
</div>

</div><!--col-->
</div><!--row-->


