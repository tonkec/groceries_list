<div class="row">
  <%= form_for @grocery, :html => {:class => 'col s10 offset-s1'} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="input-field col s12">
   <%= f.label :title %><br>
   <%= f.text_field :title, class: "materialize-textarea", :placeholder => "#{@grocery.title}", :value => nil %>
 </div>
 <div class="input-field col s12">
   <%= f.label :description %><br>
   <%= f.text_area :description, class: "materialize-textarea", :placeholder => "#{@grocery.description}", :value => nil  %>
 </div>
 <div class="input-field col s12">
   <%= f.label :amount %><br>
   <%= f.number_field :amount, class: "materialize-textarea", :placeholder => "#{@grocery.amount}", :min => "0"  %>
 </div>
 <div class="input-field col s12">
   <%= f.label :price %><br>
   <%= f.number_field :price, class: "materialize-textarea", :placeholder => "#{@grocery.price}", :min => "0"  %>
 </div>
  <div class="col s12">
     <div class="actions">
    <%= f.submit 'Submit', :class => 'btn waves-effect waves-light btn-blue btn-grocery-submit' %>
  </div>
</div>


</div>
<% end %>
