<% provide(:title, "Show") %>
<div class="row users-main-row">
  <div class="row users-row">
    <div class="col s12 l6 offset-l3">
      <p id="notice"><%= notice %></p>
      <h1 class="grocery-heading">Your current groceries</h1>
    </div>
  </div>

  <div class="row">
    <div class="col s12 l6 offset-l3">
      <%= link_to new_grocery_path, :class => "btn-floating btn-large waves-effect waves-light btn-grocery-new" do %>
      <i class="mdi-content-add"></i>
      <% end %>
    </div>
  </div>

  <% if @user.groceries.any? %>
  <div class="row groceries-list">
    <div class="col s12 l6 offset-l3">
      <ul class="collapsible popout collapsible-accordion">
        <%= render @groceries %>
      </ul>
      <%= will_paginate @groceries, :page_links => false, :html => false %>
      <% else %>
      <h1 style="color: #fff;">You dont have groceries yet!</h1>
      <% end %>
    </div>
  </div>  
</div>

<script>
 $(document).ready(function(){
  $('.collapsible').collapsible({
      accordion : false // A setting that changes the collapsible behavior to expandable instead of the default accordion style
    });

  $(".next_page, .previous_page").empty();
  $(".previous_page").append('<i class="fa fa-arrow-left"></i>');
  $(".next_page").append('<i class="fa fa-arrow-right"></i>');
});
</script>